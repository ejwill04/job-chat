{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["standard", "standard-react"],
  "env": {
    "browser": true
  },
  "plugins": [
    "babel",
    "react",
    "promise",
    "json"
  ],
  "rules": {
      "comma-dangle": ["error", "always-multiline"],
      "semi": [1, "always"],
      "jsx-quotes" : [2, "prefer-single"],
      "object-curly-spacing" : [2, "always"],
      "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }]
    }
}
